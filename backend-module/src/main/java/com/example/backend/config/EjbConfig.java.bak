package com.example.backend.config;

import com.example.ejb.remote.BeneficioRemote;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import javax.naming.InitialContext;
import javax.naming.NamingException;

@Configuration
public class EjbConfig {

    @Bean
    public BeneficioRemote beneficioRemote() throws NamingException {
        InitialContext ctx = new InitialContext();
        return (BeneficioRemote) ctx.lookup(
            "java:global/ejb-module/BeneficioBean!com.example.ejb.remote.BeneficioRemote"
        );
    }
}
